			<form action="{{ path("app_dashboard_settings_delete_account") }}" method="POST" class="mt-2 w-100">
				{% for message in app.flashes("delete_account_error") %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
				<input type="hidden" name="token" value="{{ csrf_token("deleteUserAccount") }}">
				<a class="btn btn-primary w-100 py-2" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Delete my account</a>
				<div class="modal fade" tabindex="-1" id="deleteAccountModal">
					<div class="modal-dialog" role="document">
						<div class="modal-content rounded-3 shadow">
							<div class="modal-body p-4 text-center">
								<h5 class="mb-0" id="deleteAccountModalLabel">Important information on account deletion</h5>
								<p class="mb-0">By clicking on "Okay", you understand that all the data in your account will be deleted (e-mail, meetings, transcripts, etc.), and that you will no longer be able to log in.<br>
									You will be automatically logged out.</p>
							</div>
							<div class="modal-footer flex-nowrap p-0">
								<input class="btn btn-lg btn-danger fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 fw-bold border-end" type="submit" value="Delete my account" data-bs-dismiss="modal"></input>
							<button type="button" class="btn btn-lg fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">Cancel</button>
						</div>
					</div>
				</div>
			</div>
		</form>
