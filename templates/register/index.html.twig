{% extends "register/common/index.html.twig" %}

{% block form %}
	<div class="card bg-glass">
		<div class="card-body px-4 py-5 px-md-5">
			<form action="{{ path("app_register") }}" method="POST">
				{% for message in app.flashes("register_error") %}
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						{{ message }}
						  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
				<div class="form-floating mb-3 pb-1">
					<input type="text" class="form-control" id="firstname" name="firstname" placeholder="Jane" value="{{ app.request.get("firstname")|default("") }}" required>
					<label for="firstname">First name</label>
				</div>
				<div class="form-floating mb-3 pb-1">
					<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Doe" value="{{ app.request.get("lastname")|default("") }}" required>
					<label for="lastname">Last name</label>
				</div>
				<div class="form-floating mb-3 pb-1">
					<input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="{{ app.request.get("email")|default("") }}" required>
					<label for="email">Email address</label>
				</div>
				<div class="form-floating mb-3 pb-1">
					<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
					<label for="password">Password</label>

				</div>
				<input type="hidden" name="token" value="{{ csrf_token("register") }}">
				<input class="btn btn-primary w-100 py-2" type="submit" value="Create my account"></input>

			<div class="text-muted pt-3">You have an account?
				<a href="{{ path("app_login") }}">Login here</a>
			</div>
		</form>
	</div>
{% endblock %}
